<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvReview"
        style="@style/textReviewContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/common_list_padding"
        android:paddingRight="@dimen/common_list_padding"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/tvReview"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="@dimen/common_list_padding"
        android:layout_marginRight="@dimen/common_list_padding"></View>
</RelativeLayout>